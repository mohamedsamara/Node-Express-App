extends layout

block content
	.form-frame
		div.d-flex.justify-content-between.align-items-center
			h4= movie.title
			div.d-flex.justify-content-end.align-items-center
				a(href='/movies/edit/'+movie._id) Edit 
				a.btn.btn-danger.delete-article(href='/movies/delete/'+movie._id) Delete
		div.movie-details
			span description
			p= movie.description
			span country
			p= movie.country
			span language
			p= movie.language
			span imdb 
			p= movie.imdbRating
			span year
			p= movie.year


